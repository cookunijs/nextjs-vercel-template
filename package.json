{
  "name": "application",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "clean": "rm -rf .next && rm -rf dist",
    "dev": "cross-env APP_ENV=local nodemon && yarn copy-static",
    "deploy:dev": "yarn build && vercel",
    "deploy:prod": "yarn build && vercel --prod",
    "build": "yarn clean && run-p build:*",
    "build:next": "next build && yarn copy-static",
    "build:server": "tsc --project tsconfig.server.json",
    "start": "cross-env NODE_ENV=production node dist/server/index.js",
    "copy-static": "cpx \"public/{**,.**}/{*,.*}\" \".next/static\"",
    "lint": "eslint --ext .ts,.tsx .",
    "lint:fix": "eslint --ext .ts,.tsx . --fix"
  },
  "dependencies": {
    "express": "^4.17.1",
    "firebase": "^8.1.1",
    "firebase-admin": "^9.4.1",
    "next": "^10.0.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@types/basic-auth": "^1.1.3",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.9",
    "@types/node": "^14.14.10",
    "@types/react": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "dotenv-webpack": "^6.0.0",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-react": "^7.21.5",
    "firebase-tools": "^8.17.0",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.0",
    "typescript": "^4.1.2",
    "webpack": "^5.9.0"
  }
}
